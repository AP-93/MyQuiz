<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/backplay"
    android:orientation="vertical"
    tools:context="com.apquiz.ante.flagquiz.HighScoreActivity">


    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:src="@drawable/highscore" />

    <TableLayout
        android:layout_width="match_parent"
        android:background="@drawable/button_shape"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        android:layout_weight="6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1.     "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewScore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1234"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/textViewScore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 3.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/textViewScore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 4.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/textViewScore4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 5.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"

                android:gravity="center"
                android:id="@+id/textViewScore5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 6.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/textViewScore6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 7.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/textViewScore7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 8.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/textViewScore8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 9.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/textViewScore9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.     " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textViewScore10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/line" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_state"
        android:onClick="resetScore"
        android:text="@string/reset"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />
</LinearLayout>
